@model IEnumerable<Shop.Models.ShopList>
@{
    ViewData["Title"] = "Index";
}

<h1>ShopList</h1>

<div class="container p-3 pb-0">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ShopList" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Create New Item
            </a>
        </div>
    </div>
    <br /> <br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead class="text-uppercase text-center">
            <tr>
                <th>
                    Number
                </th>
                <th>
                    Product Name
                </th>
                <th>Size</th>
                <th>Price</th>
                <th>Edit/Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {

                <tr>
                    <td width="25%">
                        @obj.Id
                    </td>
                    <td width="25%">
                        @obj.ProductName
                    </td>
                    <td width="25%">
                        @obj.Size
                    </td>
                    <td width="25%">
                        @obj.Price
                    </td>

                    <td>
                        <div class="w-75 btn-group align-content-center" role="group">
                            <a asp-controller="ShopList" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="ShopList" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>


            }
        </tbody>

    </table>
</div>